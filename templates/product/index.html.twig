{% extends 'base.html.twig' %}
{% block title %} Las 10 Mejores Barras De Sonido En España {% endblock %}
{% block styles %}
{%  endblock %}
{% block content %}
    {% if products is empty %}
        <div class="fs-6 bg-light p-5">
            <p class="text-danger">¡Advertencia!</p>
            <p>No se encontraron productos para mostrar.</p>
            <p>
                Por favor, ejecute el comando para obtener los datos de la API.
            </p>
            <code>
                php bin/console app:fetch-api-data
            </code>
        </div>
    {% else %}
        <div class="fs-1">Las 10 Mejores Barras De Sonido En España</div>
        <div class="container mt-3 d-none d-lg-block">
            <div class="row">
                <div class="col-lg-12 text-end">
                    Declaración de divulgación publicitaria
                </div>
            </div>
            <div class="row border-top border-bottom p-1 bg-light mt-2">
                <div class="col-lg-2 text-center">
                    Producto
                </div>
                <div class="col-lg-2 text-center">
                    Nuestra Puntuación
                </div>
                <div class="col-lg-6">
                    Características Clave
                </div>
                <div class="col-lg-2">
                </div>
            </div>
        </div>
        {% for product in products %}
            {{ include('product/partials/card.html.twig', {product: product}) }}
        {% endfor %}
    {% endif %}


{% endblock %}